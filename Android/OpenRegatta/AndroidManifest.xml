<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.openregatta"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="ACCESS_WIFI_STATE" />
    <uses-permission android:name="ACCESS_NETWORK_STATE" />
    <uses-permission android:name="INTERNET"/>
     
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.openregatta.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.openregatta.BoatPreferences"
            android:label="@string/boat_settings" 
            android:screenOrientation="nosensor" >
             <intent-filter>
            <action android:name="com.example.openregatta.BoatPreferences" />
            <category android:name="android.intent.category.PREFERENCE" />
                    </intent-filter>
        </activity>

        <activity
            android:name="com.openregatta.NetworkPreferences"
            android:label="@string/network_settings" 
            android:screenOrientation="nosensor">
              <intent-filter>
            <action android:name="com.example.openregatta.NetworkPreferences" />
            <category android:name="android.intent.category.PREFERENCE"  />
                  </intent-filter>
        </activity>
        
         <service
            android:name="com.openregatta.services.ServiceNetwork"
            android:exported="false"/>
         <service
            android:name="com.openregatta.services.ServiceUtils"
            android:exported="false"/>>
        
	</application>

</manifest>
